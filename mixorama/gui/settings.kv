<SettingsWidget>:
  components: components
  restart_btn: restart_btn
  reboot_btn: reboot_btn
  shutdown_btn: shutdown_btn
  monitor_scales_chk: monitor_scales_chk
  monitor_scales: monitor_scales

  BoxLayout:
    orientation: 'vertical'

    StackLayout:
      orientation: 'lr-tb'
      size_hint: 1, 1/12

      Button:
        size_hint: 1/6, 1
        text: '<- Back'
        on_press:
          root.manager.transition.direction = 'right'
          root.manager.current = 'main'
      Label:
        size_hint: 5/6, 1
        text: 'Components remaining volumes:'

    BoxLayout:
      orientation: 'vertical'

      StackLayout:
        id: components
        orientation: 'lr-tb'

    #        Label:
    #          text: 'Vodka'
    #          size_hint: 1/8, 1/6
    #        Slider:
    #          size_hint: 7/8, 1/6
    #          min: 100
    #          max: 1500
    #          value: 200


    BoxLayout:
      size_hint: 1, 1/12
      orientation: 'horizontal'

      BoxLayout:
        size_hint: 1/3, 1
        CheckBox:
          size_hint: 1/4, 1
          id: monitor_scales_chk
        Label:
          id: monitor_scales
          size: 30, 0
          text: 'Monitor scales'
          bcolor: 0, 0, 0.3, 1
          canvas.before:
            Color:
              rgba: self.bcolor
            Rectangle:
              pos: self.pos
              size: self.size


      Widget: #placeholder
        size_hint: 1/6, 1

      Button:
        id: restart_btn
        size_hint: 1/6, 1
        text: 'Restart'
      Button:
        id: reboot_btn
        size_hint: 1/6, 1
        text: 'Reboot'
      Button:
        id: shutdown_btn
        size_hint: 1/6, 1
        text: 'Shutdown'