  components: components
  reboot_btn: reboot_btn

  BoxLayout:
    orientation: 'vertical'

    StackLayout:
      orientation: 'lr-tb'
      size_hint: 1, 1/12

      Button:
        size_hint: 1/6, 1
        text: '<- Back'
